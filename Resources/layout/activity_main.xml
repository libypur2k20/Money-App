<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">
    
    <!-- Section One -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="0.2">

        <RelativeLayout
            android:background="@drawable/roundededges"
            android:elevation="4dp"
            android:padding="10dp"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="90dp">

            <Refractored.Controls.CircleImageView
                android:layout_marginRight="15dp"
                android:src="@drawable/personal1"
                android:id="@+id/profileImage"
                android:layout_centerVertical="true"
                android:layout_width="65dp"
                android:layout_height="65dp"/>

            <TextView
                android:id="@+id/nameTextView"
                android:text="Uchenna Nnodim"
                android:textSize="16sp"
                fontPath="fonts/GlacialIndifference-Bold.ttf"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/profileImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/addressTextView"
                android:text="New Jersey, USA"
                android:layout_toRightOf="@+id/profileImage"
                android:layout_below="@+id/nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:src="@drawable/phonecall"
                android:id="@+id/phoneCallImage"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_width="35dp"
                android:layout_height="35dp"/>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/profileImage"
                android:layout_below="@id/addressTextView"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            
                <ImageView
                    android:tint="@color/colorOrange"
                    app:srcCompat="@drawable/star"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>

                <ImageView
                    android:tint="@color/colorOrange"
                    android:layout_marginLeft="5dp"
                    app:srcCompat="@drawable/star"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>

                <ImageView
                    android:tint="@color/colorOrange"
                    android:layout_marginLeft="5dp"
                    app:srcCompat="@drawable/star"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>

                <ImageView
                    android:tint="@color/colorOrange"
                    android:layout_marginLeft="5dp"
                    app:srcCompat="@drawable/star"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>

                <ImageView
                    android:layout_marginLeft="5dp"
                    app:srcCompat="@drawable/star"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>
            
            </LinearLayout>

            </RelativeLayout>
    </RelativeLayout>

    <!-- Section Two -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.22">


        <TextView
            android:layout_above="@+id/balanceTextView"

            android:text="Account Balance"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/balanceTextView"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:text="$32,405.00"
            android:textSize="32sp"
            android:textStyle="bold"
            fontPath="fonts/GlacialIndifference-Bold.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </RelativeLayout>

